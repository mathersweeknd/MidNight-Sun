<!DOCTYPE html>
<html lang="en" data-theme="" data-video="">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]MidNight Sun</title>
    <script type="importmap"></script>

    <link rel="icon" href="./images/icon.png" type="image/png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Clima.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.6.0/dist/sweetalert2.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.6.0/dist/sweetalert2.min.js"></script>
</head>
<body>
    <header>

        <!-- NAVBAR -->

        <nav class="navbar d-flex align-content-center justify-content-between px-5">
            <div class=" m-0 d-flex justify-content-between align-items-center">
                <a id="logo" class="align-items-center" href="/index#top">
                    <img src="./images/icon.png" alt="Minha Marca" width="40" height="40" class="d-inline-block align-top me-2 logo-image">
                </a>

                <a class="navbar-brand" asp-area="" asp-page="/Index#top">
                    <span class="dark-text">Mid</span><span class="dark-text">Night</span>
                    <span class="light-text"> Sun</span>
                </a>
            </div>

            <div class="d-flex">
                <div>
                    <button class="dark-text btn btn-link" onclick="toggleWord(event)">
                        <img src="./images/darklight.png" alt="Modo de cor" class="d-inline-block rotating-image"><span id="toggle-Text" class="ms-1 toggle-text dark-text">Dark</span>
                    </button>
                </div>
                
                <ul class="nav-item dropdown">
                    <li class="nav-item dropdown">
                        <button class="nav-link d-flex" href="#" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" onKeyDown="handleKeyDown(event)">
                            <img src="./images/br.png" alt="MidNight Sun" class="image-width align-self-center"><span class="dark-text">Português</span>
                        </button>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <ul class="list-unstyled">
                                <button class="dropdown-item" onclick="changeLanguage('pt')">
                                    <span><img src="./images/br.png" alt="MidNight Sun" class="image-width"></span>
                                    <span class="dark-text">Português</span>
                                </button>
                                <button class="dropdown-item" onclick="changeLanguage('es')">
                                    <span><img src="./images/esp.png" alt="MidNight Sun" class="image-width"></span>
                                    <span class="dark-text">Espanhol</span>
                                </button>
                                <button class="dropdown-item" onclick="changeLanguage('en')">
                                    <span><img src="./images/en.png" alt="MidNight Sun" class="image-width"></span>
                                    <span class="dark-text">Inglês</span>
                                </button>
                            </ul>
                        </div>           
                    </li>
                </ul>
            </div>
        </nav>

    </header>

    <!-- CONTEÚDO INDEX -->

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <!-- RODAPÉ -->

    <footer class="mt-auto">
        <span style="color: black;">&copy;</span> <span class="dark-text">Mid</span><span class="dark-text">Night</span> <span class="light-text">Sun</span> 
    </footer>

    <!-- SCRIPTS -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script src="site.hl0n3qxcfz.js" defer></script>
</body>
</html>